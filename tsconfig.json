{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"lib": ["es2015"],
		"moduleResolution": "node",
		"noImplicitAny": false,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"newLine": "lf",
		"checkJs": false,
		"noUnusedLocals": true,
		"pretty": true,
		"strict": true,
		"declaration": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "dist"
	},
	"include": ["./index.ts"],
	"exclude": ["node_modules"]
}
